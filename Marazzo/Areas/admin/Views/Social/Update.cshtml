@model Social
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<form asp-area="admin" asp-controller="Social" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <img src="~/Uploads/@Model.Image" alt="Alternate Text" width="100px" />
        <label asp-for="@Model.ImageFile">Blog image</label>
        <input class="form-control" asp-for="@Model.ImageFile">
        <label asp-for="@Model.Link">Blog title</label>
        <input class="form-control" asp-for="@Model.Link">
        <input asp-for="@Model.Id" hidden />
        <input asp-for="@Model.Image" hidden />


    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>


