@model List<Feature>
@{
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a asp-area="admin" asp-controller="Feature" asp-action="create" class="btn btn-primary">Create</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Icon</th>
            <th scope="col">Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>@item.Id</td>
            <td>@item.Icon</td>
            <td>@item.Title</td>

            <td><a asp-controller="Feature" asp-area="admin" asp-action="update" asp-route-id="@item.Id" type="button" class="btn btn-success">Update</a></td>
            <td><a asp-controller="Feature" asp-area="admin" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" type="button" class="btn btn-danger">Delete</a></td>
        </tr>

        }

    </tbody>
</table>
